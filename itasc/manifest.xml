<package>
  <description brief="iTaSC">

     IAS iTaSC-manipulation package, currently geared towards
     pancake baking.

     This package contains modified components from kul-ros-pkg/iTaSC.
 
     This package is expecting an ouverhaul regarding the interface:
     Modular task function specifications are planned.

  </description>
  <author>Ruben Smits, Ingo Kresse, Ruben Smits</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/iTaSC</url>

  <depend package="orocos_kdl"/>
  <depend package="feature_constraints"/>
  <depend package="rtt_geometry_msgs"/>
  <depend package="rtt_constraint_msgs"/>
  <depend package="tf_conversions"/>
  <depend package="ocl"/>
  <depend package="rtt"/>
  <depend package="geometry_msgs" />
  <depend package="rtt_std_msgs" />
  <depend package="rtt_sensor_msgs" />
  <depend package="rtt_motion_viz" />

  <depend package="kdl_typekit" />
  <depend package="kdl_parser" />
  <depend package="motion_viz" />

  <depend package="rospy" />

  <depend package="loopback_controller_manager"/>
  <depend package="ias_mechanism_controllers"/>

  <export> 
    <cpp cflags="-I${prefix}/src" />
    <python path="${prefix}/python" />
  </export> 

</package>


